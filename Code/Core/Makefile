ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = clang
endif
ifeq ($(origin CXX), default)
  CXX = clang++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
INCLUDES += -I.. -I../../ThirdParty/xxHash -I../../ThirdParty/optick/src
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64
LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../../Builds/Binaries/Debug
TARGET = $(TARGETDIR)/libFlintCore.a
OBJDIR = ../../Builds/Intermediate/Debug/Debug/FlintCore
DEFINES += -DFLINT_DEBUG -DFLINT_PLATFORM_LINUX
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++17
LIBS += ../../Builds/Binaries/Debug/liboptick.a
LDDEPS += ../../Builds/Binaries/Debug/liboptick.a

else ifeq ($(config),prerelease)
TARGETDIR = ../../Builds/Binaries/PreRelease
TARGET = $(TARGETDIR)/libFlintCore.a
OBJDIR = ../../Builds/Intermediate/PreRelease/PreRelease/FlintCore
DEFINES += -DFLINT_PRE_RELEASE -DFLINT_PLATFORM_LINUX
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++17
LIBS += ../../Builds/Binaries/PreRelease/liboptick.a
LDDEPS += ../../Builds/Binaries/PreRelease/liboptick.a

else ifeq ($(config),release)
TARGETDIR = ../../Builds/Binaries/Release
